#!/usr/bin/make -f

override_dh_auto_install:
	dh_auto_install --buildsystem=cmake
	# Get rid of embedded python, blender should fall back to
	# system python if it doesn't find the embedded one:
	rm -r debian/blender/usr/share/blender/*/python/
	# Remove apparently-unneded dotfiles:
	rm debian/blender/usr/share/blender/*/.bfont.ttf
	rm debian/blender/usr/share/blender/*/.Blanguages


override_dh_pysupport:
	# Not supported yet: dh_pysupport -V 3.1

%:
	dh --with quilt --buildsystem=cmake $@
